    <% if @booking.errors.any? %>
      <ul>
        <% @booking.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

  <%= form_for @booking, :html => {:class => "book"} do |f| %>
    <%= f.hidden_field :flight_id %>
    <%= hidden_field_tag :number_of_passengers, @number_of_passengers %>

      <div class = "form-group">
        <%= f.label :enter_your_email %>
        <%= f.email_field :passenger_email, { class: "form-control  transparent-input", required: true } %>
      </div>
    </div>

    <div class="row">
      <h2 class= "header">Passengers</h2>
      <%= f.fields_for :passengers do |pass| %>
        <div class="col-sm-4 border">
          <div class = "form-group">
            <%= pass.label :name %>
            <%= pass.text_field :name, { class: "form-control  transparent-input", required: true } %>
          </div>

          <div class = "form-group">
            <%= pass.label :email %>
            <%= pass.email_field :email, { class: "form-control  transparent-input", required: true } %>
          </div>

          <div class = "form-group">
            <%= pass.label :phone_number %>
            <%= pass.phone_field :phone_number, { class: "form-control  transparent-input", required: true } %>
          </div>

          <div class = "form-group">
            <%= pass.label :age %>
            <%= pass.number_field :age, { class: "form-control  transparent-input", required: true } %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="form-actions">
        <%= f.submit class: 'btn btn-default btn-lg btn-block' %>
      </div>
    </div>
  <% end %>
