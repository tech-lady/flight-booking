<div class="flight-table-div">
  <%= form_for :flight_booking, url: new_booking_path, method: :get do |f| %>
  
  <table class="table">
    <thead>
      <tr>
        <th>Aircraft Name</th>
        <th>Tail Number</th>
        <th>Origin Airport</th>
        <th>Destination</th>
        <th>Flight Date </th>
      </tr>
    </thead>
    <tbody>
      <%= f.hidden_field :number_of_passengers, value: params[:number_of_passengers] %>
      <%= render flights, f: f %>

      <%= f.submit "Book Flight", class: "btn btn-default", id: "book-fly" %>
    </tbody>
  </table>
  <% end %>
</div>
