<%= form_tag({controller: 'flights', action: 'search'}, method: 'post', remote: true, class: 'search-flight') do %>
  <div class="form-group">
    <%= label_tag :origin, "Departure Airport" %>
    <%= select_tag :origin, options_for_select(@airports.collect { |airport| [airport.name, airport.id] }), { class: "form-control  transparent-input", id:"origin-id", required: true } %>
  </div>

  <div class="form-group">
    <%= label_tag :destination, "Arrival Airport" %>
    <%= select_tag :destination, options_for_select(@airports.collect { |airport| [airport.name, airport.id] }), { class: "form-control  transparent-input", id:"destination-id", required: true } %>
  </div>

  <div class="form-group">
    <%= label_tag :number_of_passengers, "No of Passengers" %>
    <%= select_tag :number_of_passengers, options_for_select((1..10)), { class: "form-control  transparent-input", required: true } %>
  </div>

  <div class="form-group">
    <%= label_tag :departure_date, "Departure Date" %>
    <div class="input-group">
      <%= date_field_tag :departure_date, nil, { class: "datepicker form-control transparent-input" } %>
      <label for="date-picker" class="input-group-addon btn">
        <span class="glyphicon glyphicon-calendar"></span>
      </label>
    </div>
  </div>

  <%= submit_tag 'Search Flights', class: 'btn btn-default btn-lg btn-block', id: "search-flight" %>
<% end %>